{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/shahaan0001/FIT3179_Assignment2/main/data/touristArrival_byMonth.csv"
    },
    "title": "Monthly number of tourist arrival",
    "config": {
        "view": {
            "strokeWidth": 0,
            "step": 13
        },
        "axis": {
            "domain": false
        }
    },
    "mark": "rect",
    "encoding": {
        "x": {
            "field": "Date",
            "timeUnit": "year",
            "type": "ordinal",
            "title": "Year"
        },
        "y": {
            "field": "Date",
            "timeUnit": "month",
            "type": "ordinal",
            "title": "Month"
        },
        "color": {
            "field": "NumTourists",
            "scale": {"scheme": "yelloworangered"},
            "type": "quantitative",
            "legend": {
                "title": null
            }
        },
        "tooltip": [
            {"field": "Date", "type": "temporal", "format": "%b %Y"},
            {"field": "NumTourists", "type": "quantitative", "title": "Number of tourists arrival"}
        ]
    }
  }